<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/incomingMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_bubble_incoming"
        android:padding="10dp"
        android:textColor="@color/primary_text"
        android:textSize="12sp"
        android:maxWidth="280dp"
        android:layout_marginEnd="8dp"
        android:lineSpacingExtra="2dp"
        android:text="Incoming message goes here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/incomingTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary"
        android:textSize="10sp"
        android:layout_marginTop="2dp"
        android:text="12:34 PM"
        app:layout_constraintTop_toBottomOf="@id/incomingMessageText"
        app:layout_constraintStart_toStartOf="@id/incomingMessageText" />

</androidx.constraintlayout.widget.ConstraintLayout>
