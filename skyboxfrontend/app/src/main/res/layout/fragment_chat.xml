<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chat_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_diagnol"
    android:padding="0dp">

    <!-- Sidebar with Add Contact / Group / ADA Bot and Contact List -->
    <LinearLayout
        android:id="@+id/sidebar_container"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Add Contact button -->
        <ImageButton
            android:id="@+id/btn_add_contact"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Add Contact"
            android:src="@drawable/ic_person_add"
            app:tint="@color/accent" />

        <!-- Add Group button -->
        <ImageButton
            android:id="@+id/btn_add_group"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Add Group"
            android:src="@drawable/ic_group_add"
            app:tint="@color/accent" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/secondary" />

        <!-- FrameLayout to center pills vertically -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:foregroundGravity="center_vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sidebar_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />
        </FrameLayout>
    </LinearLayout>

    <!-- Chat Header -->
    <LinearLayout
        android:id="@+id/chat_header_container"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_input_container"
        android:elevation="4dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/sidebar_container"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text_callsign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="Callsign"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP Address"
                android:textColor="@color/secondary"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_start_call"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Start Call"
            android:src="@drawable/ic_call"
            app:tint="@color/accent" />
    </LinearLayout>

    <!-- Chat Messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/chat_header_container"
        app:layout_constraintBottom_toTopOf="@id/input_container"
        app:layout_constraintStart_toEndOf="@id/sidebar_container"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/emptyMessageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No messages yet. Start chatting!"
        android:textColor="@color/secondary"
        android:textSize="14sp"
        android:visibility="visible"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="@id/chatRecyclerView"
        app:layout_constraintBottom_toBottomOf="@id/chatRecyclerView"
        app:layout_constraintStart_toStartOf="@id/chatRecyclerView"
        app:layout_constraintEnd_toEndOf="@id/chatRecyclerView" />

    <!-- Input Bar -->
    <LinearLayout
        android:id="@+id/input_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/bg_input_container"
        android:elevation="40dp"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/sidebar_container"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Voice Mode button -->
        <ImageButton
            android:id="@+id/btn_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Voice Mode"
            android:src="@drawable/ic_mic_on"
            app:tint="@color/accent" />

        <!-- Chat input -->
        <EditText
            android:id="@+id/chatInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Type a message..."
            android:paddingStart="8dp"
            android:inputType="textMultiLine"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary" />

        <!-- Send button -->
        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Send"
            android:src="@drawable/ic_message_send"
            app:tint="@color/accent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
