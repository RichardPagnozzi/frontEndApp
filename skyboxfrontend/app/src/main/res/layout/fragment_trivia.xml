<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trivia_mode_select_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_vertical">

    <!-- 50/50 vertical divider -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- Vertical divider line -->
    <View
        android:id="@+id/centerDivider"
        android:layout_width="2dp"
        android:layout_height="350dp"
        android:background="@color/accent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/verticalGuideline" />

    <!-- LEFT SIDE -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leftPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/verticalGuideline">

        <!-- Icon -->
        <ImageView
            android:id="@+id/triviaIcon"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:src="@drawable/bg_logo_transparent"
            app:tint="#8CFFFFFF"
            android:contentDescription="Trivia Icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- RIGHT SIDE -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rightPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/centerDivider"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Right Title -->
        <TextView
            android:id="@+id/selectModeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Game Mode"
            android:textAllCaps="true"
            android:letterSpacing="0.05"
            android:textSize="18sp"
            android:textColor="@color/primary_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <!-- Buttons Stack -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/selectModeTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btnClassic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="8dp"
                android:backgroundTint="@color/accent"
                android:elevation="4dp"
                android:text="Classic (20)"
                android:textColor="@color/text_on_accent"
                android:textSize="16sp"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnTimed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="8dp"
                android:backgroundTint="@color/accent"
                android:elevation="4dp"
                android:text="Timed (20)"
                android:textColor="@color/text_on_accent"
                android:textSize="16sp"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnBlitz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="8dp"
                android:backgroundTint="@color/accent"
                android:elevation="4dp"
                android:text="Blitz"
                android:textColor="@color/text_on_accent"
                android:textSize="16sp"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnStreak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="8dp"
                android:backgroundTint="@color/accent"
                android:elevation="4dp"
                android:text="Streak"
                android:textColor="@color/text_on_accent"
                android:textSize="16sp"
                android:padding="12dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
