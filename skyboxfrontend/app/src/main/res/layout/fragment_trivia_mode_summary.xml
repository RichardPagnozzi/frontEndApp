<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trivia_summary_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_diagnol"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/summaryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MODE TITLE"
        android:textAllCaps="true"
        android:letterSpacing="0.08"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Divider Under Title -->
    <View
        android:id="@+id/titleDivider"
        android:layout_width="140dp"
        android:layout_height="2dp"
        android:background="@color/accent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/summaryTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description Container (chat bubble style) -->
    <FrameLayout
        android:id="@+id/descriptionContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_description_chat_bubble"
        android:padding="16dp"
        android:elevation="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="8dp"
        android:clipToOutline="true"
        android:backgroundTint="#1A1F2B"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineProvider="background"
        app:layout_constraintTop_toBottomOf="@id/titleDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/summaryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a description of the game mode. It tells the user what the objective and rules are."
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />
    </FrameLayout>

    <!-- High Score -->
    <TextView
        android:id="@+id/highScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Score: --"
        android:textColor="@color/accent"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/descriptionContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button Row -->
    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/highScoreText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/secondary"
            android:text="Back"
            android:textColor="@color/primary_text"
            android:textSize="16sp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/accent"
            android:text="Play"
            android:textColor="@color/text_on_accent"
            android:textSize="16sp"
            android:padding="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
