<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_vertical"
    android:padding="0dp">

    <!-- Sidebar -->
    <LinearLayout
        android:id="@+id/sidebar_container"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_toggle_contacts"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Toggle contact list"
            android:src="@drawable/ic_person"
            app:tint="@color/accent" />

        <ImageButton
            android:id="@+id/btn_toggle_groups"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Toggle group list"
            android:src="@drawable/ic_group"
            app:tint="@color/accent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dp"
            android:background="@color/secondary" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contacts_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/groups_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Call area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/call_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sidebar_container"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/input_callsign"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_input_container"
            android:hint="Callsign"
            android:padding="14dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary"
            app:layout_constraintBottom_toTopOf="@id/input_ip"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <EditText
            android:id="@+id/input_ip"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_container"
            android:hint="IP Address"
            android:padding="14dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/secondary"
            app:layout_constraintBottom_toTopOf="@id/fab_row"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_callsign" />

        <LinearLayout
            android:id="@+id/fab_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_ip">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_start_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="normal"
                android:layout_marginEnd="50dp"
                android:contentDescription="Start voice call"
                android:src="@drawable/ic_call"
                app:backgroundTint="@color/accent"
                app:tint="@color/text_on_accent" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_add_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Add contact"
                android:src="@drawable/ic_person_add"
                app:backgroundTint="@color/accent"
                app:tint="@color/text_on_accent" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
