<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_vertical"
    android:padding="0dp">

    <!-- Sidebar -->
    <LinearLayout
        android:id="@+id/sidebar_container"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/btn_toggle_contacts"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Toggle contact list"
            android:src="@drawable/ic_person"
            app:tint="@color/accent" />

        <ImageButton
            android:id="@+id/btn_toggle_groups"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Toggle group list"
            android:src="@drawable/ic_group"
            app:tint="@color/accent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dp"
            android:background="@color/secondary" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contacts_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:visibility="visible" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/groups_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Call area -->
    <FrameLayout
        android:id="@+id/call_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/sidebar_container"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Idle/input screen -->
        <LinearLayout
            android:id="@+id/view_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/input_callsign"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_input_container"
                android:hint="Callsign"
                android:padding="14dp"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/secondary" />

            <EditText
                android:id="@+id/input_ip"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_input_container"
                android:hint="IP Address"
                android:padding="14dp"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/secondary" />

            <LinearLayout
                android:id="@+id/fab_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_start_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fabSize="normal"
                    android:layout_marginEnd="50dp"
                    android:contentDescription="Start voice call"
                    android:src="@drawable/ic_call"
                    app:backgroundTint="@color/accent"
                    app:tint="@color/text_on_accent" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/btn_add_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Add contact"
                    android:src="@drawable/ic_person_add"
                    app:backgroundTint="@color/accent"
                    app:tint="@color/text_on_accent" />
            </LinearLayout>
        </LinearLayout>

        <!-- Ringing screen -->
        <include
            android:id="@+id/view_ringing"
            layout="@layout/view_call_ringing"
            android:visibility="gone" />

        <!-- Timeout screen -->
        <include
            android:id="@+id/view_timeout"
            layout="@layout/view_call_timeout"
            android:visibility="gone" />

        <!-- Gallery screen -->
        <include
            android:id="@+id/view_call_gallery"
            layout="@layout/view_call_gallery"
            android:visibility="gone" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
